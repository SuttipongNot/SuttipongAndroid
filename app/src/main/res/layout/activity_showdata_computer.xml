<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showdata_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="569dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNamebrand1"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_marginTop="7dp"
                android:text="ชื่อแบรนด์ : "
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewNamebrand"
                style="@style/textshow"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtModel1"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_marginTop="7dp"
                android:text="ชื่อรุ่น :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewModel"
                style="@style/textshow"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSerialNumber"
                android:layout_width="170dp"
                android:layout_height="54dp"
                android:layout_marginTop="7dp"
                android:text="ซีเรียลนัมเบอร์ :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewSerialnumber"
                style="@style/textshow"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="จำนวน :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewQuantity"
                style="@style/textshow"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="ราคา :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewPrice"
                style="@style/textshow"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCPUspeed"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="ความเร็วซีพียู :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewCPUspeed"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                style="@style/textshow"
                android:layout_weight="1"
                android:text="" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMemory_capacity"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="ความจุหน่วยความจำ :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewMemory"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                style="@style/textshow"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/txtMemory_Hardisk"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="ความจุฮาร์ดดิสก์ :"
                android:textAlignment="center"
                android:textColor="#9E9C9C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewHarddisk"
                android:layout_width="50dp"
                android:layout_height="35dp"
                style="@style/textshow"
                android:layout_weight="1"
                android:text="" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>